CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

oclean:
	$(RM) $(OBJ)

clean:
	$(RM) $(NAME) *~ \#*\# .\#* *.swp *.swo *.swn

fclean: oclean clean

re: fclean all

