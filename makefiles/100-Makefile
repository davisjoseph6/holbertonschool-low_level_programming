CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

# Ensure header exists before anything builds
all: m.h $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Use $(RM) exactly twice; don't set RM (GNU make provides rm -f)
oclean:
	$(RM) $(OBJ)

clean:
	$(RM) $(NAME) *~ \#*\# .\#* *.swp *.swo *.swn

fclean: oclean clean

re: fclean all

